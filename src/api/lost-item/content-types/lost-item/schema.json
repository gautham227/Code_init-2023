{
  "kind": "collectionType",
  "collectionName": "lost_items",
  "info": {
    "singularName": "lost-item",
    "pluralName": "lost-items",
    "displayName": "lost_item"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "resolved": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "location": {
      "type": "string"
    }
  }
}
